<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><!--底部按钮区域-->

    <LinearLayout
        android:id="@+id/tabBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_dibuanniubeijing"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <RelativeLayout
            android:layout_width="430dp"
            android:layout_height="230dp"
            android:background="@drawable/anniu_bg_button3"
            android:padding="30dp">

            <TextView
                android:id="@+id/btnAutoFocus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_focus_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="自动对焦"
                android:textColor="@drawable/text_color_selector"
                android:textSize="8sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btnStartRecord"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/btnAutoFocus"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_record_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="开始录像"
                android:textColor="@drawable/text_color_selector"
                android:textSize="8sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btnPlayback"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_play_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="录像回放"
                android:textColor="@drawable/text_color_selector"
                android:textSize="8sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btnPhotograph"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/btnPlayback"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_photograph_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="拍照"
                android:textColor="@drawable/text_color_selector"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/btnArithmeticSelect"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btnPhotograph"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_arithmetic_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="降噪方法"
                android:textColor="@drawable/text_color_selector"
                android:textSize="8sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btnInspection"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_inspection_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="一键自检"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/shengdian"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/btnStartRecord"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_shengdian"
                android:gravity="center"
                android:padding="5dp"
                android:text="省电模式"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/btnReset"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_reset_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="系统复位"
                android:textColor="@drawable/text_color_selector"
                android:textSize="8sp"
                android:visibility="visible" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/btnDemodeSelect"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_normal"
                android:gravity="center"
                android:padding="5dp"
                android:text="正常模式"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="visible" /><!--巡航按钮-->

            <TextView
                android:id="@+id/tvCruise"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_yu_shezhi"
                android:gravity="center"
                android:padding="5dp"
                android:text="巡航设置"
                android:textColor="@color/white"
                android:textSize="8sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/motorSteps"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_cnt"
                android:gravity="center"
                android:text="电机步数"
                android:textColor="#59B4E2"
                android:textSize="8sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btnAmplifierControl"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_scenario_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="NONE"
                android:textColor="@drawable/text_color_selector_gray"
                android:textSize="8sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btnOnlineSelect"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/anniu_bg_button1"
                android:drawableTop="@drawable/ic_wired_mode_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="有线模式"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="visible" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="230dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/anniu_bg_button3"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/anniu_bg_button1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:id="@+id/ll_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageA"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/iv_volume" />

                    <com.liys.view.ArcProView
                        android:id="@+id/arcViewVolume"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:light_show="true"
                        app:progress_max="150"
                        app:text_size="8sp" />

                </LinearLayout>

                <com.fhc.laser_monitor_sw_android_rtsp_app.views.SignSeekBar2
                    android:id="@+id/topSeekProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:ssb_max="15"
                    app:ssb_track_size="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/anniu_bg_button1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_o"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/souhu_player_bright" />

                    <com.liys.view.ArcProView
                        android:id="@+id/arcViewbrightnes"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:layout_gravity="center"
                        app:light_show="true"
                        app:progress_max="100"
                        app:text_size="8sp" />
                </LinearLayout>

                <com.fhc.laser_monitor_sw_android_rtsp_app.views.SignSeekBar2
                    android:id="@+id/bottomSeekProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:ssb_track_size="4dp" />

            </LinearLayout>

        </RelativeLayout><!--发送high-->


        <TextView
            android:id="@+id/tvHideHigh"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/anniu_bg_button1"
            android:gravity="center"
            android:padding="5dp"
            android:text="发送high"
            android:textColor="@color/black_00_color"
            android:textSize="8sp"
            android:visibility="gone" />

    </LinearLayout>

</merge>