        <RelativeLayout
            android:id="@+id/rv1Set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="gone">

            <ImageView
                android:id="@+id/rv1BG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_biankuang"
                android:visibility="gone" />

<!--            <com.fhc.laser_monitor_sw_android_rtsp_app.views.MyDragRectangleOneView-->
