<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/faf8ba16"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:src="@mipmap/bg_logo_3" />

    <com.fhc.laser_monitor_sw_android_rtsp_app.views.CubeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:id="@+id/dlfkdkl"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/lllllllsds">

            <include
                android:id="@+id/input_layout_qw"
                layout="@layout/layout_login_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_progress"
                layout="@layout/layout_login_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_layout_qw"
                android:layout_marginTop="25dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/main_btn_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:paddingLeft="15dip"
                    android:paddingTop="2dip"
                    android:paddingRight="15dip"
                    android:paddingBottom="2dip"
                    android:text="Login"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dlfkdkl"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:paddingLeft="15dip"
                    android:paddingTop="5dip"
                    android:paddingRight="15dip"
                    android:paddingBottom="5dip"
                    android:text="CHANGE\nPASSWORD"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_create_ccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dlfkdkl"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:paddingLeft="15dip"
                    android:paddingTop="5dip"
                    android:paddingRight="15dip"
                    android:paddingBottom="5dip"
                    android:text="ACCOUNT\nMANAGEMENT"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.fhc.laser_monitor_sw_android_rtsp_app.views.CubeLayout>

    <Button
        android:id="@+id/btnSwitchEnglish"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/text_bg"
        android:gravity="center"
        android:text="Indonesian"
        android:textColor="#ffffff"
        android:textSize="10sp" />

</RelativeLayout>
