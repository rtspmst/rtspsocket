<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Black">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomBaseTheme" parent="android:Theme.Black">
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal" />


    <style name="ToolbarTheme" parent="LibraryAppTheme">
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="LibraryAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CheckBoxTheme" parent="LibraryAppTheme">
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="item_text_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#101010</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="item_text_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog" >
        <item name="android:windowFrame"> @null</item>
        <item name="android:windowNoTitle"> true</item>
        <item name="android:windowBackground"> @color/white</item>
        <item name="android:windowIsFloating"> true</item>
        <item name="android:windowContentOverlay"> @null</item>
    </style>

</resources>
